generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ============================================================
// ユーザー（Supabase Auth連携 — idはauth.users.idと一致）
// ============================================================

model User {
  id            String    @id @db.Uuid
  email         String    @unique
  name          String?
  image         String?
  birthDate     DateTime? @map("birth_date")
  birthTime     String?   @map("birth_time")
  birthPlace    String?   @map("birth_place")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  subscription    Subscription?
  payments        Payment[]
  chatSessions    ChatSession[]
  notifications   Notification[]
  oracleUsageLogs OracleUsageLog[]
  favorites       FavoriteOracle[]

  @@map("users")
}

// ============================================================
// サブスクリプション・決済
// ============================================================

model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique @map("user_id") @db.Uuid
  stripeCustomerId     String?            @unique @map("stripe_customer_id")
  stripeSubscriptionId String?            @unique @map("stripe_subscription_id")
  stripePriceId        String?            @map("stripe_price_id")
  status               SubscriptionStatus @default(INACTIVE)
  currentPeriodStart   DateTime?          @map("current_period_start")
  currentPeriodEnd     DateTime?          @map("current_period_end")
  cancelAtPeriodEnd    Boolean            @default(false) @map("cancel_at_period_end")
  createdAt            DateTime           @default(now()) @map("created_at")
  updatedAt            DateTime           @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  PAST_DUE
  CANCELED
  TRIALING
}

model Payment {
  id              String        @id @default(cuid())
  userId          String        @map("user_id") @db.Uuid
  stripePaymentId String?       @unique @map("stripe_payment_id")
  amount          Int
  currency        String        @default("jpy")
  status          PaymentStatus @default(PENDING)
  description     String?
  createdAt       DateTime      @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("payments")
}

enum PaymentStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

// ============================================================
// チャット
// ============================================================

model ChatSession {
  id        String   @id @default(cuid())
  userId    String   @map("user_id") @db.Uuid
  oracleId  String   @map("oracle_id")
  title     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages       ChatMessage[]
  sharedSessions SharedSession[]

  @@index([userId, oracleId])
  @@index([userId, updatedAt])
  @@map("chat_sessions")
}

model ChatMessage {
  id        String      @id @default(cuid())
  sessionId String      @map("session_id")
  role      MessageRole
  content   String      @db.Text
  createdAt DateTime    @default(now()) @map("created_at")

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId, createdAt])
  @@map("chat_messages")
}

enum MessageRole {
  USER
  ASSISTANT
  SYSTEM
}

// ============================================================
// 占い師利用ログ
// ============================================================

model OracleUsageLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id") @db.Uuid
  oracleId  String   @map("oracle_id")
  tokens    Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, oracleId])
  @@index([userId, createdAt])
  @@map("oracle_usage_logs")
}

// ============================================================
// 通知
// ============================================================

model Notification {
  id        String           @id @default(cuid())
  userId    String           @map("user_id") @db.Uuid
  title     String
  message   String           @db.Text
  read      Boolean          @default(false)
  type      NotificationType @default(INFO)
  link      String?
  createdAt DateTime         @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@map("notifications")
}

enum NotificationType {
  INFO
  WARNING
  SUCCESS
  FORTUNE
}

// ============================================================
// お気に入り占い師
// ============================================================

model FavoriteOracle {
  id        String   @id @default(cuid())
  userId    String   @map("user_id") @db.Uuid
  oracleId  String   @map("oracle_id")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, oracleId])
  @@map("favorite_oracles")
}

// ============================================================
// チャットセッション共有
// ============================================================

model SharedSession {
  id         String   @id @default(cuid())
  sessionId  String   @map("session_id")
  shareToken String   @unique @map("share_token")
  expiresAt  DateTime @map("expires_at")
  createdAt  DateTime @default(now()) @map("created_at")

  session ChatSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([shareToken])
  @@map("shared_sessions")
}
